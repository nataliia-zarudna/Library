@model Library.Models.Book

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.LabelFor(model => model.GenreID, "Genre")
    </div>
    <div class="editor-field">
        @Html.DropDownList("GenreID")
        @Html.ValidationMessageFor(model => model.GenreID)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.AuthorID, "Author")
    </div>
    <div class="editor-field">
        @Html.DropDownList("AuthorID", String.Empty)
        @Html.ValidationMessageFor(model => model.AuthorID)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Filepath)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Filepath)
        @Html.ValidationMessageFor(model => model.Filepath)
    </div>

    <p>
        <input type="submit" value="Create" />
    </p>

}